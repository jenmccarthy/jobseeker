<!DOCTYPE html>
<html>
<head>
  <title>Jobs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(document).ready(function(){
      setTimeout(function(){
        $('#flash').remove();
      }, 4000);
    })
  </script>
</head>
<body class="container-fluid">

  <nav class="navbar navbar-default navbar-fixed-top" id="page_header">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to image_tag("jobseeker.png", class: "img img-responsive img-thumbnail brand-image hidden-xs"), root_path, title: "Home" %>

      </div>
    </div>

    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <div class="nav navbar-nav navbar-right">
        <%= render 'layouts/login' %>
      </div>
    </div>
  </nav>

  <div class="row menu-row">
    <div class="col-xs-2 menu-options">
      <div>
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation" class="active">
            
          </li>
          <li role="presentation" class="active">
            <%= link_to "Companies", companies_path, class: "contact-btn btn btn-default", title: "Manage your Companies" %>
          </li>
          <li role="presentation" class="active">
            <%= link_to "Jobs", companies_path, class: "contact-btn btn btn-default", title: "Manage your Jobs" %>
          </li>
          <li role="presentation" class="active">
            <%= link_to "Interviews", companies_path, class: "contact-btn btn btn-default", title: "Manage your Interviews" %>
          </li>
        </ul>

      </div>
    </div>

    <div class="col-xs-10 yield-col">
    	<%= yield %>
    </div>
  </div>


  <div id="flash" class="clearfix">
    <% if flash[:notice] != nil %>
      <div class='alert alert-success' role='alert'>
        <%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] != nil %>
      <div class='alert alert-danger' role='alert'>
        <%= flash[:alert] %></div>
    <% end %>
  </div>

  <div class="navbar navbar-default navbar-fixed-bottom">
    <p id="copyright">Ruby on Rails application &copy; 2014 built by: <%= link_to "Visible Difference Web Development", "http://www.visible-difference.com", target: "_blank" %></p>
    
  </div>

</body>
</html>
